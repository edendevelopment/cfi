%h1.name= @person.name
.student-status
  - if @person.student
    = Configurable.programme_member_label
  - else
    = button_to "Make #{@person.name} a #{Configurable.programme_member_label}", make_student_person_path(@person)

= output_fields_for(@person) do |output|
  = output.text "date_of_birth_with_confirmation", :label_name => "Date of birth"
  = output.text "gender"
  = output.text "religion"

= link_to "Edit basic information", basic_information_person_path(@person)
<br/>
=link_to "Missing Pupil", pupil_person_path(@person)
